        <div class="inputWrapper">
          <input required id="square_footage" name="square_footage" type="number" placeholder="" />
          <label class="formLabel relative" for="square_footage">Square Footage:</label>
        </div>
        <div class="inputWrapper">
          <input required id="pool" name="pool" type="text" placeholder="" />
          <label class="formLabel relative" for="pool">Pool:</label>
        </div>
        <div class="inputWrapper">
          <input required id="age_of_hvac" name="age_of_hvac" type="text" placeholder="" />
