        <div class="inputWrapper">
          <input required id="age_of_roof" name="age_of_roof" type="text" placeholder="" />
          <label class="formLabel relative" for="age_of_roof">Age of Roof:</label>
        </div>
        <div class="inputWrapper">
          <input required id="asking_price" name="asking_price" type="text" placeholder="" />
          <label class="formLabel relative" for="asking_price">Asking Price:</label>
        </div>
        <div class="inputWrapper">
          <input required id="reason_for_selling" name="reason_for_selling" type="text" placeholder="" />
          <label class="formLabel relative" for="reason_for_selling">Reason for Selling:</label>
        </div>
        <div class="inputWrapper">
          <input required id="tenant_duration" name="tenant_duration" type="text" placeholder="" />
          <label class="formLabel relative" for="tenant_duration">Tenant Duration:</label>
        </div>
        <div class="inputWrapper">
          <input required id="lease_end" name="lease_end" type="text" placeholder="" />
          <label class="formLabel relative" for="lease_end">Lease End:</label>
        </div>
        <div class="inputWrapper">
          <input required id="tenant_monthly_rent" name="tenant_monthly_rent" type="text" placeholder="" />
          <label class="formLabel relative" for="tenant_monthly_rent">Tenant Monthly Rent:</label>
        </div>
        <div class="inputWrapper">
          <input required id="vacancy_duration" name="vacancy_duration" type="text" placeholder="" />
          <label class="formLabel relative" for="vacancy_duration">Vacancy Duration:</label>
        </div>
        <div class="inputWrapper">
          <input required id="house_additional_info" name="house_additional_info" type="text" placeholder="" />
          <label class="formLabel relative" for="house_additional_info">House Additional Info:</label>
        </div>
        <div class="inputWrapper">
          <input required id="lead_source" name="lead_source" type="text" placeholder="" />
          <label class="formLabel relative" for="lead_source">Lead Source:</label>
        </div>
   
