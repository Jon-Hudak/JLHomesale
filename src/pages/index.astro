---
import Layout from "../layouts/Layout.astro";
import step1Img from "../assets/images/step1.svg";
import step2Img from "../assets/images/step2.svg";
import step3Img from "../assets/images/step3.svg";
import step4Img from "../assets/images/step4.svg";
import tab1Img from "../assets/images/tab1.png";
import keysImg from "../assets/images/keys.jpg";
import clipboardImg from "../assets/images/clipboard.png";
import { Image } from "astro:assets";
---

<Layout title="Welcome to Astro.">
  <main>
    <!-- Hero -->
    <section id="home-hero" class="home-hero py-5 mb-5 px-6">
      <div class="cont mt-44 pb-64">
        <p class="font-serif font-semibold text-xl">
          Your Trusted Real Estate Partner
        </p>
        <h1 class="font-semibold text-5xl mt-4 max-w-[24ch]">
          Selling Your Home Has Never Been Easier.
        </h1>
        <div class="mt-10">
          <a class="uppercase btn btn-outline" href="/cash">Get A Cash Offer</a>
          <a class="uppercase btn btn-primary" href="/sell"> Learn More</a>
        </div>
      </div>
    </section>

    <!-- Page Content -->

    <section class="relative -top-56 cont">
      <h2 id="tab-title" class="sr-only">Our Process</h2>
      <div class="tab-wrapper">
        <ul aria-labelledby="tab-title" class="tabs grid grid-cols-2 md:grid-cols-4 gap-4">
          <li  class="tab-header bg-background even:bg-backgroundLight active">
            <a href="#step-1"
              id="tab-1" class="p-8 inline-block"
        
            >
              <Image src={step1Img} class="step-icon" alt="house" />
              <h2 class="sr-only lg:not-sr-only">Talk to a Home Buying Expert</h2>
              <h2 class="lg:sr-only">Step 1</h2>
            </a>
          </li>
          <li class="tab-header bg-background even:bg-backgroundLight ">
            <a href="#step-2"
              id="tab-2" class="p-8 inline-block"
        
            >
              <Image src={step2Img} class="step-icon" alt="house" />
              <h2 class="sr-only lg:not-sr-only">Receive a Home Appraisal</h2>
              <h2 class="lg:sr-only">Step 2</h2>
            </a>
          </li>
          <li  class="tab-header bg-background even:bg-backgroundLight ">
            <a href="#step-3"
              id="tab-3" class="p-8 inline-block"
        
            >
              <Image src={step3Img} class="step-icon" alt="house" />
              <h2 class="sr-only lg:not-sr-only">Get a Generous Cash Offer</h2>
              <h2 class="lg:sr-only">Step 3</h2>
            </a>
          </li>
          <li  class="tab-header bg-background even:bg-backgroundLight ">
            <a href="#step-4"
              id="tab-4"
              class="p-8 inline-block"
        
            >
              <Image src={step4Img} class="step-icon" alt="house" />
              <h2 class="sr-only lg:not-sr-only">Get Paid</h2>
              <h2 class="lg:sr-only">Step 4</h2>
            </a>
          </li>
        </ul>
      </div>
      <div class="tab-content-wrapper">
        <article id="step-1" class="tab-content  grid md:grid-cols-2 bg-accent text-black ">
          <div class="tab-info p-8 text-balance">
            <h3 class="h3">Talk to a Home Buying Expert</h3>
            <p class="font-medium text-base">Selling your home has never been so easy. Simply schedule your FREE, no obligation in-home consultation with one of our home buying experts.</p>
            <a class="btn btn-secondary w-full mt-8" href="/cash">Get a Cash Offer</a>
          </div>
          <div class="tab-img">
            <Image class="h-full object-cover" src={tab1Img} alt=""></Image>
          </div>
        </article>
        <article id="step-2" class="tab-content  grid md:grid-cols-2 bg-accent text-black ">
          <div class="tab-info p-8 text-balance">
            <h3 class="h3">Receive a Home Appraisal</h3>
            <p class="font-medium text-base">Our team will put together a comprehensive assessment of your home allowing you to understand exactly what you can expect to receive when selling your home.</p>
            <a class="btn btn-secondary w-full mt-8" href="/cash">Get a Cash Offer</a>
          </div>
          <div class="tab-img">
            <Image class="h-full object-cover" src={tab1Img} alt=""></Image>
          </div>
        </article>
        <article id="step-3" class="tab-content  grid md:grid-cols-2 bg-accent text-black ">
          <div class="tab-info p-8 text-balance">
            <h3 class="h3">Get a Generous Cash Offer</h3>
            <p class="font-medium text-base">We charge no commissions, we pay your closing costs, and we buy the home in any condition. WE SIMPLY MAKE AN OFFER ON THE SPOT. Simple, fast, and flexible.</p>
            <a class="btn btn-secondary w-full mt-8" href="/cash">Get a Cash Offer</a>
          </div>
          <div class="tab-img">
            <Image class="h-full object-cover" src={tab1Img} alt=""></Image>
          </div>
        </article>
        <article id="step-4" class="tab-content  grid md:grid-cols-2 bg-accent text-black ">
          <div class="tab-info p-8 text-balance">
            <h3 class="h3">Get Paid</h3>
            <p class="font-medium text-base">We charge no commissions, we pay your closing costs, and we buy the home in any condition. WE SIMPLY MAKE AN OFFER ON THE SPOT. Simple, fast, and flexible.</p>
            <a class="btn btn-secondary w-full mt-8" href="/cash">Get a Cash Offer</a>
          </div>
          <div class="tab-img">
            <Image class="h-full object-cover" src={tab1Img} alt=""></Image>
          </div>
        </article>
      </div>
    </section>

    <div class="container section no-pad" id="reasons">
      <div class="row" data-aos="fade-up">
        <div class="col-md-6">
          <Image class="img-fluid" src={keysImg} alt="" />
        </div>
        <div class="col-md-6">
          <div class="copy">
            <h2 class="leadin">Make the Best Decision</h2>
            <h1>Reasons To Sell Your House</h1>
            <hr />
            <p>
              We make fair offers on the spot and can purchase quickly. We also
              realize selling your home is a big decision so we can be flexible
              to your timeframe.
            </p>
            <ul>
              <div class="row">
                <div class="col-6">
                  <li>Inherited property</li>
                  <li>Tired of being a landlord</li>
                  <li>Divorce</li>
                  <li>Relocation</li>
                  <li>Vacant home</li>
                </div>
                <div class="col-6">
                  <li>Behind on payments</li>
                  <li>Avoid foreclosure</li>
                  <li>Costly repairs</li>
                  <li>Downsizing</li>
                </div>
              </div>
            </ul>

            <a href="/cash/" class="btn btn-primary">Get A Cash Offer</a>
          </div>
        </div>
      </div>
    </div>
    <div class="container-fluid section bg-dark">
      <div class="container">
        <div class="row" data-aos="fade-up">
          <div class="col-md-6">
            <div class="copy">
              <h3 class="leadin">Why Work With Us</h3>
              <h1>About JL Home Sale</h1>
              <hr />
              <p>
                We take the stress out of selling your home. We make the process
                fast, cost effective and easy. When you schedule a FREE home
                assessment with one of our professional team members, you’ll
                receive a cash offer after just 20 minutes. Our goal is to close
                in a timely manner that is flexible to your needs. You let us
                know what time works and we'll accomodate.
              </p>
            </div>
          </div>
          <div class="col-md-6">
            <Image class="img-fluid" alt="" src={clipboardImg} />
          </div>
        </div>
      </div>
    </div>

    <div class="container icon-boxes">
      <div class="row" data-aos="fade-up">
        <div class="col-md-6">
          <div class="icon-box">
            <div class="row">
              <div class="col-10 mx-auto">
                <h2>Schedule Your Free 20 Minute Home Assement</h2>
                <p>
                  We strive to accomodate each of our seller's unique situation.
                  To get started it’s as simple as filling out a form and
                  scheduling a time that works best for you and your schedule.
                </p>
                <a href="/cash/" class="btn btn-primary" style="margin-top:1em;"
                  >Get Started Today</a
                >
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="icon-box">
            <div class="row">
              <div class="col-10 mx-auto">
                <h2>Interested in Becoming an Investment Partner?</h2>
                <p>
                  We take a long term approach to investing. Our buying criteria
                  ensures we are bringing the appropriate assets to our partners
                  that meet their needs.
                </p>
                <a
                  href="/investment/"
                  class="btn btn-primary"
                  style="margin-top:1em;">Learn More</a
                >
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="container section" id="features">
      <div class="row" data-aos="fade-up">
        <div class="col-md-12">
          <div class="copy">
            <h3 class="leadin">Life Happens</h3>
            <h1>Let Us Take The Stress Out<br /> Of Selling Your Home</h1>
            <hr />
          </div>
          <div class="container">
            <div class="row">
              <div class="col-12 col-md-4 feature">
                <div class="row">
                  <div class="col-11 mx-auto">
                    <h2>Inherited property</h2>
                    <p>
                      You’ve inherited property but you’re not wanting to
                      maintain it. We’re here to help you close quickly!
                    </p>
                    <a
                      href="/cash/"
                      class="btn btn-primary"
                      style="margin-top:1em;">Get Cash Offer</a
                    >
                  </div>
                </div>
              </div>
              <div class="col-12 col-md-4 feature">
                <div class="row">
                  <div class="col-11 mx-auto">
                    <h2>Tired of being a landlord</h2>
                    <p>
                      Ready to be done dealing with tenants? We understand your
                      frustration.
                    </p>
                    <a
                      href="/cash/"
                      class="btn btn-primary"
                      style="margin-top:1em;">Get Cash Offer</a
                    >
                  </div>
                </div>
              </div>
              <div class="col-12 col-md-4 feature">
                <div class="row">
                  <div class="col-11 mx-auto">
                    <h2>Divorce</h2>
                    <p>
                      You already have enough on your plate. Dealing with the
                      house is something you’re ready to move past. Let us help
                      you get out of that property ASAP.
                    </p>
                    <a
                      href="/cash/"
                      class="btn btn-primary"
                      style="margin-top:1em;">Get Cash Offer</a
                    >
                  </div>
                </div>
              </div>
              <div class="col-12 col-md-4 feature">
                <div class="row">
                  <div class="col-11 mx-auto">
                    <h2>Relocation</h2>
                    <p>
                      Whether you’re moving for a new job or you’re just ready
                      for a change in scenery. You’re ready to get going, you
                      don’t have time for a long process.
                    </p>
                    <a
                      href="/cash/"
                      class="btn btn-primary"
                      style="margin-top:1em;">Get Cash Offer</a
                    >
                  </div>
                </div>
              </div>
              <div class="col-12 col-md-4 feature">
                <div class="row">
                  <div class="col-11 mx-auto">
                    <h2>Vacant Home</h2>
                    <p>
                      Home been vacant for years? Not sure what you’re going to
                      do with it? Find out what it’s worth today!
                    </p>
                    <a
                      href="/cash/"
                      class="btn btn-primary"
                      style="margin-top:1em;">Get Cash Offer</a
                    >
                  </div>
                </div>
              </div>
              <div class="col-12 col-md-4 feature">
                <div class="row">
                  <div class="col-11 mx-auto">
                    <h2>Behind on payments</h2>
                    <p>
                      Times can get tough. The bills are piling up, and you’re
                      not sure where to turn. Let us help you get back on top of
                      your finances by getting you out of that house.
                    </p>
                    <a
                      href="/cash/"
                      class="btn btn-primary"
                      style="margin-top:1em;">Get Cash Offer</a
                    >
                  </div>
                </div>
              </div>
              <div class="col-12 col-md-4 feature">
                <div class="row">
                  <div class="col-11 mx-auto">
                    <h2>Avoid foreclosure</h2>
                    <p>
                      You know you need to sell and you know you need to do it
                      fast. It only takes us 20 minutes for us to make a cash
                      offer.
                    </p>
                    <a
                      href="/cash/"
                      class="btn btn-primary"
                      style="margin-top:1em;">Get Cash Offer</a
                    >
                  </div>
                </div>
              </div>
              <div class="col-12 col-md-4 feature">
                <div class="row">
                  <div class="col-11 mx-auto">
                    <h2>Costly repairs</h2>
                    <p>
                      You know it’s going to cost a pretty penny to get repairs
                      completed. Let us deal with the headache of repairs so you
                      don’t have to.
                    </p>
                    <a
                      href="/cash/"
                      class="btn btn-primary"
                      style="margin-top:1em;">Get Cash Offer</a
                    >
                  </div>
                </div>
              </div>
              <div class="col-12 col-md-4 feature">
                <div class="row">
                  <div class="col-11 mx-auto">
                    <h2>Downsizing</h2>
                    <p>
                      You’re looking to downsize, and you’re looking to do it
                      sooner rather than later. Don’t let a long selling process
                      prevent you from moving on to your next stage in life.
                    </p>
                    <a
                      href="/cash/"
                      class="btn btn-primary"
                      style="margin-top:1em;">Get Cash Offer</a
                    >
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  .home-hero {
    background: transparent url("../assets/images/hero-bg.jpg") repeat 0 0;
  }
  /* main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
  } */
  body {
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
  .astro-a {
    position: absolute;
    top: -32px;
    left: 50%;
    transform: translatex(-50%);
    width: 220px;
    height: auto;
    z-index: -1;
  }
  .h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
  .instructions {
    margin-bottom: 2rem;
    border: 1px solid rgba(var(--accent-light), 25%);
    background: linear-gradient(
      rgba(var(--accent-dark), 66%),
      rgba(var(--accent-dark), 33%)
    );
    padding: 1.5rem;
    border-radius: 8px;
  }
  .instructions code {
    font-size: 0.8em;
    font-weight: bold;
    background: rgba(var(--accent-light), 12%);
    color: rgb(var(--accent-light));
    border-radius: 4px;
    padding: 0.3em 0.4em;
  }
  .instructions strong {
    color: rgb(var(--accent-light));
  }
  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 2rem;
    padding: 0;
  }
  .tab-header img {
    filter: invert(95%) sepia(93%) saturate(33%) hue-rotate(71deg)
      brightness(106%) contrast(99%);
  }
  .tab-header.active img, .tab-header:hover img {
    filter: invert(81%) sepia(13%) saturate(1633%) hue-rotate(81deg) brightness(89%) contrast(86%);
  }
 
 
</style>
